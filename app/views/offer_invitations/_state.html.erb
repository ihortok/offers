<% case offer_invitation.aasm_state.to_sym %>
<% when :pending %>
  <span class="flex items-center gap-2 text-sm italic text-gray-600">
    <%= offer_invitation.aasm_state %>
    <span class="w-[18px]">
      <i class="fa-solid fa-spinner text-lg"></i>
    </span>
  </span>
<% when :accepted %>
  <span class="flex items-center gap-2 text-sm italic text-green-600">
    <%= offer_invitation.aasm_state %>
    <span class="w-[18px]">
      <i class="fa-solid fa-circle-check text-lg"></i>
    </span>
  </span>
<% when :declined %>
  <span class="flex items-center gap-2 text-sm italic text-red-600">
    <%= offer_invitation.aasm_state %>
    <span class="w-[18px]">
      <i class="fa-solid fa-circle-xmark text-lg"></i>
    </span>
  </span>
<% end %>
